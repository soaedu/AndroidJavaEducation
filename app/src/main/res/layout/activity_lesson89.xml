<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson89_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson89_content_provider_title" />

        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout style="@style/MW">

            <Button
                android:id="@+id/Lesson89_Insert_Btn"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/insert_text" />
            <Button
                android:id="@+id/Lesson89_Update_Btn"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/update_text" />
            <Button
                android:id="@+id/Lesson89_Delete_Btn"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/delete_text" />
            <Button
                android:id="@+id/Lesson89_Error"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/error_text" />

        </LinearLayout>
        <ListView
            android:id="@+id/Lesson89_Contact_LV"
            style="@style/MW" />

    </LinearLayout>

</LinearLayout>
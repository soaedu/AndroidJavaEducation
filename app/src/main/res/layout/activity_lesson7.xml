<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson7_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/folder_res_values_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/Lesson7_Top_LL"
            style="@style/MMV"
            android:layout_weight="1"
            android:background="@color/top_ll_blue">

            <TextView
                android:id="@+id/Lesson7_Top_TV"
                style="@style/WW"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="@string/lesson7_top_text_view_text" />
            <Button
                android:id="@+id/Lesson7_Top_BTN"
                style="@style/WW"
                android:layout_gravity="center_horizontal"
                android:text="@string/lesson7_top_btn_text" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Lesson7_Bottom_LL"
            style="@style/MMV"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Lesson7_Bottom_TV"
                style="@style/WW"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="TextView" />
            <Button
                android:id="@+id/Lesson7_Bottom_BTN"
                style="@style/WW"
                android:layout_gravity="center_horizontal"
                android:text="Button" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
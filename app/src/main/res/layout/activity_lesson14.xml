<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson14_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson14_simple_calculator_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/Lesson14_Layout1_LL"
            style="@style/MWH"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginTop="3pt">

            <EditText
                android:id="@+id/Lesson14_Num1_ET"
                style="@style/MW"
                android:layout_weight="1"
                android:layout_marginRight="5pt"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:id="@+id/Lesson14_Num2_ET"
                style="@style/MW"
                android:layout_weight="1"
                android:layout_marginLeft="5pt"
                android:inputType="numberDecimal">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Lesson14_Layout2_LL"
            style="@style/MW"
            android:layout_marginTop="3pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt">

            <Button
                android:id="@+id/Lesson14_Add_BTN"
                style="@style/MW"
                android:layout_weight="1"
                android:textSize="8pt"
                android:text="+" />
            <Button
                android:id="@+id/Lesson14_Sub_BTN"
                style="@style/MW"
                android:layout_weight="1"
                android:textSize="8pt"
                android:text="-" />
            <Button
                android:id="@+id/Lesson14_Mult_BTN"
                style="@style/MW"
                android:layout_weight="1"
                android:textSize="8pt"
                android:text="*" />
            <Button
                android:id="@+id/Lesson14_Div_BTN"
                style="@style/MW"
                android:layout_weight="1"
                android:textSize="8pt"
                android:text="/" />

        </LinearLayout>
        <TextView
            android:id="@+id/Lesson14_Result_TV"
            style="@style/MW"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:layout_marginTop="3pt"
            android:gravity="center_horizontal"
            android:textSize="12pt" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson94_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson94_fragments_title" />

        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/Lesson94_Find_Btn"
            style="@style/WW"
            android:onClick="onClick"
            android:text="@string/find_text" />
        <fragment
            android:id="@+id/Lesson94_Fragment1"
            android:name="edu.sostrovsky.androidjavaedu.Lesson94_Fragment1"
            style="@style/MW"
            android:layout_weight="1"
            tools:layout="@layout/fragment1_lesson94" />
        <FrameLayout
            android:id="@+id/Lesson94_Fragment2_FL"
            style="@style/MW"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson100_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson100_actionbar_title" />

        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <CheckBox
            android:id="@+id/Lesson100_AddDel_Chb"
            style="@style/WW"
            android:onClick="onClick"
            android:text="@string/add_delete_ru_text" />
        <CheckBox
            android:id="@+id/Lesson100_ShowHide_Chb"
            style="@style/WW"
            android:onClick="onClick"
            android:text="@string/show_hide_ru_text" />
        <Button
            android:id="@+id/Lesson100_Fragment_Btn"
            style="@style/WW"
            android:onClick="onClick"
            android:text="@string/fragment_ru_text" />
        <FrameLayout
            android:id="@+id/Lesson100_Container_FL"
            style="@style/MM" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson51_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson51_list_in_dialog_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMH"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/Lesson51_Items_Btn"
            style="@style/WW"
            android:text="@string/items_text" />
        <Button
            android:id="@+id/Lesson51_Adapter_Btn"
            style="@style/WW"
            android:text="@string/adapter_text" />
        <Button
            android:id="@+id/Lesson51_Cursor_Btn"
            style="@style/WW"
            android:text="@string/cursor_text" />

    </LinearLayout>

</LinearLayout>
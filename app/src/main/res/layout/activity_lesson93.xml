<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson93_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson93_fragments_title" />

        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            style="@style/WWV">

            <Button
                android:id="@+id/Lesson93_Add_Btn"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/add_text" />
            <Button
                android:id="@+id/Lesson93_Remove_Btn"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/remove_text" />
            <Button
                android:id="@+id/Lesson93_Replace_Btn"
                style="@style/WW"
                android:onClick="onClick"
                android:text="@string/replace_text" />
            <CheckBox
                android:id="@+id/Lesson93_BackStack_Chb"
                style="@style/WW"
                android:text="@string/add_to_back_stack_text" />

        </LinearLayout>
        <FrameLayout
            android:id="@+id/Lesson93_FragmentContainer"
            style="@style/MM" />

    </LinearLayout>

</LinearLayout>
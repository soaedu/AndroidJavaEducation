<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson20_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson20_extras_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/MW"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/lesson20_input_your_name_text" />
        <TableLayout
            android:id="@+id/Lesson20_Layout_TL"
            style="@style/MW"
            android:layout_margin="10dp"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/Lesson20_Row1_TR"
                style="@style/MW">

                <TextView
                    android:id="@+id/Lesson20_FName_TV"
                    style="@style/MW"
                    android:text="@string/first_name_text" />
                <EditText
                    android:id="@+id/Lesson20_FName_ET"
                    style="@style/MW"
                    android:layout_marginLeft="5dp">
                    <requestFocus> </requestFocus>
                </EditText>

            </TableRow>
            <TableRow
                android:id="@+id/Lesson20_Row2_TR"
                style="@style/MW">

                <TextView
                    android:id="@+id/Lesson20_LName_TV"
                    style="@style/MW"
                    android:text="@string/last_name_text" />
                <EditText
                    android:id="@+id/Lesson20_LName_ET"
                    style="@style/MW"
                    android:layout_marginLeft="5dp" />

            </TableRow>

        </TableLayout>
        <Button
            android:id="@+id/Lesson20_Submit_BTN"
            style="@style/WW"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit_text" />

    </LinearLayout>

</LinearLayout>
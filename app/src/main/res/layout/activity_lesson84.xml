<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.sostrovsky.androidjavaedu.Lesson64_Files"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson84_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson84_service_title" />

        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/Lesson84_Task1_TV"
            style="@style/MW"
            android:text="" />
        <TextView
            android:id="@+id/Lesson84_Task2_TV"
            style="@style/MW"
            android:text="" />
        <TextView
            android:id="@+id/Lesson84_Task3_TV"
            style="@style/MW"
            android:text="" />
        <Button
            android:id="@+id/Lesson84_Start_Btn"
            style="@style/WW"
            android:onClick="onClick"
            android:text="@string/start_service_text" />

    </LinearLayout>

</LinearLayout>
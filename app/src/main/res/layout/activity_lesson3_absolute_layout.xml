<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.sostrovsky.androidjavaedu.Lesson3_LinearLayout"
    style="@style/MMV">

    <LinearLayout style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson3_AbsoluteLayout_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            android:id="@+id/Lesson3_AbsoluteLayoutTitle_TV"
            style="@style/Navigation_Title_TV" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <AbsoluteLayout
        style="@style/MM"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/Lesson3_AbsoluteLayout_BTN"
            style="@style/WW"
            android:layout_x="42dp"
            android:layout_y="62dp"
            android:text="Button">
        </Button>
        <TextView
            android:id="@+id/Lesson3_AbsoluteLayout_TV"
            style="@style/WW"
            android:layout_x="142dp"
            android:layout_y="131dp"
            android:text="TextView">
        </TextView>
        <CheckBox
            android:id="@+id/Lesson3_AbsoluteLayout_CHB"
            style="@style/WW"
            android:layout_x="55dp"
            android:layout_y="212dp"
            android:text="CheckBox">
        </CheckBox>
        <RadioButton
            android:id="@+id/Lesson3_AbsoluteLayout_RBTN"
            style="@style/WW"
            android:layout_x="171dp"
            android:layout_y="318dp"
            android:text="RadioButton">
        </RadioButton>

    </AbsoluteLayout>

</LinearLayout>
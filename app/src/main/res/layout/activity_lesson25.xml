<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson25_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson25_preferences_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/Lesson25_Text_ET"
            style="@style/MW">
            <requestFocus>
            </requestFocus>
        </EditText>
        <LinearLayout
            android:id="@+id/Lesson25_Layout1_LL"
            style="@style/MWH">

            <Button
                android:id="@+id/Lesson25_Save_BTN"
                style="@style/WW"
                android:text="@string/save_text" />
            <Button
                android:id="@+id/Lesson25_Load_BTN"
                style="@style/WW"
                android:text="@string/load_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
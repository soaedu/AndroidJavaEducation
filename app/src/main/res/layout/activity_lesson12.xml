<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson12_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson12_dynamic_layout2_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RadioGroup
            android:id="@+id/Lesson12_Gravity_RG"
            style="@style/MWH">

            <RadioButton
                android:id="@+id/Lesson12_Left_RB"
                style="@style/WW"
                android:checked="true"
                android:text="@string/left_text" />
            <RadioButton
                android:id="@+id/Lesson12_Center_RB"
                style="@style/WW"
                android:text="@string/center_text" />
            <RadioButton
                android:id="@+id/Lesson12_Right_RB"
                style="@style/WW"
                android:text="@string/right_text" />

        </RadioGroup>
        <LinearLayout
            android:id="@+id/Lesson12_LL"
            style="@style/MWH">

            <EditText
                android:id="@+id/Lesson12_Name_ET"
                style="@style/WW"
                android:layout_weight="1"
                android:fadeScrollbars="true" />
            <Button
                android:id="@+id/Lesson12_Create_BTN"
                style="@style/WW"
                android:text="@string/create_text" />
            <Button
                android:id="@+id/Lesson12_Clear_BTN"
                style="@style/WW"
                android:text="@string/clear_text" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Lesson12_Main_LL"
            style="@style/MMV">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
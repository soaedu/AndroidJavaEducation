<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.sostrovsky.androidjavaedu.Lesson3_LinearLayout"
    style="@style/MMV">

    <LinearLayout style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson4_LayoutWeight_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            android:id="@+id/Lesson4_LayoutWeightTitle_TV"
            style="@style/Navigation_Title_TV" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout style="@style/MWH">

            <Button
                style="@style/WW"
                android:text="B1"
                android:layout_weight="0">
            </Button>
            <Button
                style="@style/WW"
                android:text="B2"
                android:layout_weight="0">
            </Button>

        </LinearLayout>
        <LinearLayout style="@style/MWH">

            <Button
                style="@style/WW"
                android:text="B3"
                android:layout_weight="1">
            </Button>
            <Button
                style="@style/WW"
                android:text="B4"
                android:layout_weight="1">
            </Button>

        </LinearLayout>
        <LinearLayout style="@style/MWH">

            <Button
                style="@style/WW"
                android:text="B5"
                android:layout_weight="1">
            </Button>
            <Button
                style="@style/WW"
                android:text="B6"
                android:layout_weight="3">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            style="@style/MWH">

            <Button
                style="@style/WW"
                android:text="B7"
                android:layout_weight="1">
            </Button>
            <Button
                style="@style/WW"
                android:text="B8"
                android:layout_weight="3">
            </Button>
            <Button
                style="@style/WW"
                android:text="B9"
                android:layout_weight="2">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            style="@style/MWH">

            <Button
                style="@style/WW"
                android:text="B10"
                android:layout_weight="1">
            </Button>
            <Button
                style="@style/WW"
                android:width="0dp"
                android:text="B11"
                android:layout_weight="0">
            </Button>
            <Button
                style="@style/WW"
                android:width="0dp"
                android:text="B12"
                android:layout_weight="0">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
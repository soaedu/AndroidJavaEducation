<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MMV">

    <LinearLayout
        style="@style/Navigation_LL">

        <LinearLayout
            android:id="@+id/Lesson21_ArrowBackWrapLL"
            style="@style/Image_Wrap"
            android:layout_width="70dp">

            <ImageView style="@style/Navigation_ArrowBack_IV" />

        </LinearLayout>
        <TextView
            style="@style/Navigation_Title_TV"
            android:text="@string/lesson21_start_activity_for_result_title" />
        <View style="@style/One_Row_Strut"/>

    </LinearLayout>
    <LinearLayout
        style="@style/MMV"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/Lesson21_Name_BTN"
            style="@style/WW"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="@string/lesson21_input_name_text" />
        <TextView
            android:id="@+id/Lesson21_Name_TV"
            style="@style/WW"
            android:layout_gravity="center_horizontal"
            android:text="@string/lesson21_your_name_is_text" />

    </LinearLayout>

</LinearLayout>